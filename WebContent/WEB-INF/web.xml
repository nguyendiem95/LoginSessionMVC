<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>HTMLCSS</display-name>
  <welcome-file-list>
    <welcome-file>jsp/index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>appFilter</filter-name>
    <filter-class>control.AppFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>appFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>getEmployee</servlet-name>
    <servlet-class>control.ServletInsertEmployee</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getEmployee</servlet-name>
    <url-pattern>/jsp/insert</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>delete</servlet-name>
    <servlet-class>control.ServletDeleteEmployee</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>delete</servlet-name>
    <url-pattern>/jsp/delete</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>update</servlet-name>
    <servlet-class>control.ServletUpdateEmployee</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>update</servlet-name>
    <url-pattern>/jsp/edit</url-pattern>
  </servlet-mapping>
</web-app>